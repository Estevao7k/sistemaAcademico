<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.ProfessorController" spacing="10">

    <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>

    <Label text="Gerenciamento de Professores" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Nome:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtNome" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtEmail" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Formação:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="txtFormacao" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10">
        <Button text="Salvar" onAction="#onSalvar"/>
        <Button text="Limpar" onAction="#onLimpar"/>
    </HBox>

    <Separator/>

    <TableView fx:id="tabelaProfessores" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colNome" text="Nome" prefWidth="200"/>
            <TableColumn fx:id="colEmail" text="Email" prefWidth="200"/>
            <TableColumn fx:id="colFormacao" text="Formação" prefWidth="150"/>
        </columns>
    </TableView>

    <HBox spacing="10">
        <Button text="Editar Selecionado" onAction="#onEditar"/>
        <Button text="Excluir Selecionado" onAction="#onExcluir"/>
    </HBox>
</VBox>